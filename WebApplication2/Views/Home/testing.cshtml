                $.each(data, function (i, order) {
                    searchresult.append("<table><tr><td id='firstcolumn'><img class='airlogo' src='https://upload.wikimedia.org/wikipedia/commons/thumb/f/f5/AirAsia_New_Logo.svg/1200px-AirAsia_New_Logo.svg.png'> </td><td id='detailcolumn'><table><tr class='time' id='distancetime'><td>" + data[i].order.fromtime + "</td><td>&rArr;</td><td>" + data[i].order.reachtime + "</td></tr><tr class='details' id='firstdetail'><td>" + data[i].order.fromloc + "</td><td>to</td><td>" + data[i].order.toloc + "</td></tr></table></td><td id='detailcolumn'><table><tr class='time' id='durationtime'><td>" + data[i].order.flightduration + "</td><td>Direct</td></tr><tr class='details' id='thirddetail'><td>Meal: Not included</td><td class='time'>" + data[i].order.price + "</td></tr><tr class='details' id='fourthdetail'><td>Cabin baggage: 1 x 7kg</td><td class='time'>" + data[i].order.aircID +"</td></tr></table></td><td id='buttonscolumn'> <button id='selection'>Select</button></td></tr></table >");
                });
            });

        </script>
</body>
