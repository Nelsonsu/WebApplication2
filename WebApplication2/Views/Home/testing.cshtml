<body>
    <h4>Customers</h4>
    <hr />
    <div class="searchresult">
        



    </div>
        <button type="button" id="add-order">Load the orders</button>


        <script>
            var data = [{
                "order": {
                    "fromtime": "10.30",
                    "reachtime": "21.30",
                    "fromloc": "Kuala Lumpur",
                    "toloc": "Melbourne",
                    "flightduration": "7h30min",
                    "price": "$400",
                    "aircID": "M110"
                }
            },
                {
                    "order": {
                        "fromtime": "0.30",
                        "reachtime": "8.30",
                        "fromloc": "Kuala Lumpur",
                        "toloc": "Melbourne",
                        "flightduration": "8h00min",
                        "price": "$480",
                        "aircID": "AA111"
                    }
                },
                {
                    "order": {
                        "fromtime": "5.30",
                        "reachtime": "13.00",
                        "fromloc": "Kuala Lumpur",
                        "toloc": "Melbourne",
                        "flightduration": "7h30min",
                        "price": "$500",
                        "aircID":"Eva111"
                    }
                }]

            $("#add-order").one("click", function () {
